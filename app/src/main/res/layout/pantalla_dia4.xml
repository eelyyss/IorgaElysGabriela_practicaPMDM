<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/dia4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/imagen_dia4" />

    <ImageView
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pantalla3" />

    <ImageView
        android:id="@+id/fotodia4"
        android:layout_width="match_parent"
        android:layout_height="526dp"
        android:layout_above="@+id/btnRegalos"
        android:layout_below="@id/dia4"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="21dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dia4" />

    <Button
        android:id="@+id/btnRegalos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#EC0505"
        android:text="VER MÁS INFORMACIÓN"
        android:textColor="#FFFFFF" />

</RelativeLayout>